<%-  include("header") -%>

<div class="box" id="heading">
  <h1><%=headingName%></h1>
</div>
<div class="box">

    <%  addedMovie.forEach(function(movie){ %>
      <form  action="/delete" method="post">
        <div class="item">
          <input type="checkbox" onchange="this.form.submit()"name ="checked"value="<%=movie._id %>">
          <p><%=movie.title %></p>
        </div>
        <input type="hidden" name="newList" value="<%= headingName%>">
      </form>
<%  }) %>

  <form class="item" action="/" method="post">
    <input type="text" name="newitem" placeholder="Enter Film here" autocomplete="off">
    <button type="submit" name="button" value="<%= headingName %>">+</button>
  </form>
</div>

<%-  include("footer") -%>
